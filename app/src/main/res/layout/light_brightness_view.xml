<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/light_brightness_bg_new"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照明"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮度"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="38%"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/brightness_progress_drawable"
            android:thumb="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/specialColorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/radio_group_divider"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_2ed939_1_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_e62129_2_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_00a2e9_3_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_fff000_4_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_e40082_5_click"
                android:button="@null"
                android:gravity="center" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="@drawable/radio_group_divider"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_758fc8_6_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_a0d9f6_7_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_acce22_8_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_fff582_9_click"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/selector_ef8641_10_click"
                android:button="@null"
                android:gravity="center" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>